<h1><center>New Document creator:</center></h1>

<%= form_with scope: :document, url: documents_path, local: true do |form| %>
	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</p>
	<p>
		<%= form.label :about %><br>
		<%= form.text_area :about %>
	</p>
	<p>
		<%= form.label :text %><br>
		<%= form.text_area :text %>
	</p>
	<p>
		<%= form.submit 'Create' %>
	</p>
<% end %>
