<div class="header">
	<div class="container">
		<h1 style="text-align: center;">Create event</h1>
	</div>
</div>

<div class="create">
	<div class="container">
		<%= form_for Event.new do |f| %>
			<div class="field">
      			<%= f.label :name %>
				<%= f.text_field :name %>
			</div>
			<br>
			<div class="field">
      			<%= f.label :place %>
				<%= f.text_field :place %>
			</div>
			<br>
			<div class="field">
      			<%= f.label :date %>
				<%= f.datetime_select :date, { order: [:minute, :hour, :day, :month, :year] } %>
			</div>
			<div class="field">
     			<%= f.label :description %>
				<br>
				<%= f.text_area :description %>
			</div>
			<br>
			<%= f.submit "Submit" %>
		<% end %>
	</div>
</div>