<%= form_for @event, url: yield(:form_url) do |f| %>
  <%= render 'layouts/error_messages', object: @event %>

  <%= f.label :name %> <br />
  <%= f.text_field :name %> <br />
  <%= f.label :location %> <br />
  <%= f.text_field :location %> <br />
  <%= f.label :date %> <br />
  <%= f.datetime_field :date %> <br />
  <%= f.label :description %> <br />
  <%= f.text_area :description %> <br />
  <%= f.submit yield(:submit_text) %>
<% end %>

