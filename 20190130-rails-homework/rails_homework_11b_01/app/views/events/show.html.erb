<h1> <%= @event.title %> </h1>
<h3> Location: <%= @event.location %> </h3>
<p> Description: <%= @event.description %> </p>
<p> Date: <%= @event.date %> </p>

<hr>
<%= link_to "Edit", edit_event_path(@event), :class => 'btn btn-default' %>

<%= link_to "Delete", event_path(@event),
	 method: :delete, 
	 data: {confirm: "Delete event?"},
	 :class => 'btn btn-danger' %>