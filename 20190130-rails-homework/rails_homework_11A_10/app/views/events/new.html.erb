<h1>Create event</h1>

<%= form_for Event.new do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :location %>
    <%= f.text_field :location %>
    <br>
    <%= f.label :date %>
    <%= f.datetime_select :date %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br>
    <%= f.submit "Submit" %>
<% end %>
