<p id="notice"><%= notice %></p>

<%= render 'layouts/header' %>

<h2>
  <strong>Name:</strong>
  <%= @person.name %>
</h2>

<% if @person.organization %>
  <h4>
    <strong>Organization:</strong>
    <%= @person.organization.name %>
  </h4>
<% end %>

<div class="wrapper">
  <% unless @subscribed.empty? %>
    <div class="personal subscribed">
    <h3> Personal </h3>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Time</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @subscribed.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= event.location %></td>
              <td><%= event.time %></td>
              <td><%= link_to 'Unsubscribe', "/person/#{@person.id}/unsubscribe/#{event.id}", method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>

  <% unless @group.empty? %>
    <div class="group subscribed">
      <h3> Group </h3>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Time</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @group.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= event.location %></td>
              <td><%= event.time %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
<div class="adder">
  <%= form_with(model: @attendance, url: "/person/#{@person.id}/add_event", local: true) do |f| %>
    <%= f.select :event_id, @unsubscribed, :prompt => 'Select One' %>
    <%= f.submit "Subscribe" %>
  <% end %>

  <%= link_to 'Edit', edit_person_path(@person) %> |
  <%= link_to 'Back', people_path %>
</div>
